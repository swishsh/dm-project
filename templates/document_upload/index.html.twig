{% extends 'base.html.twig' %}

{% block title %}DM Project{% endblock %}

{% block body %}
    <h1>DocumentUpload index</h1>

    <a href="{{ path('document_upload_new') }}">Adauga document</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nume</th>
                <th>Cuvinte cheie</th>
                <th>Pdf</th>
                <th>Actiuni</th>
            </tr>
        </thead>
        <tbody>
        {% for document_upload in document_uploads %}
            <tr>
                <td>{{ document_upload.name }}</td>
                <td>{{ document_upload.keyword }}</td>
                <td><iframe src="{{ path('show_pdf', {'documentPath': document_upload.path})}}" width="100%" height="100%"></iframe></td>
                <td>
                    <a href="{{ path('document_upload_show', {'id': document_upload.id}) }}">show</a>
                    <a href="{{ path('document_upload_edit', {'id': document_upload.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
